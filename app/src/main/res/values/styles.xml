<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layerType">software</item>
        <item name="android:background">@drawable/dashedline</item>
    </style>
    
    <style name="BothMP">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    
    <style name="WMP_HWC">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
    <style name="WWC_HMP">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    
    <style name="BothWC">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
    <style name="MarginAll_10dp">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>
    
    <style name="BothMP.LayoutBorder">
        <item name="android:background">@drawable/layout_border</item>
    </style>
    
    <style name="BothMP.LayoutNoBorder">
        <item name="android:background">@drawable/layout_noborder</item>
    </style>
    
    <style name="BothWC.LayoutBorder">
        <item name="android:background">@drawable/layout_border</item>
    </style>

    <style name="BothWC.MarginAll_10dp">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>
     
    <style name="BothMP.MarginAll_10dp">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>
    
    <style name="WMP_HWC.MarginAll_10dp">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>
    
    <style name="img_mainView" parent="BothMP">
        <item name="android:orientation">vertical</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>
    
    <style name="img_rulesView">
        
        <item name="android:orientation">vertical</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:width">300dp</item>
    </style>
    
    <style name="img_detailsView">
        <item name="android:minHeight">240dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:width">300dp</item>
    </style>
    
    <style name="tv_contestName2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_toLeftOf">@id/lbl_details</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:textColor">#fffeee</item>
        <item name="android:textSize">18sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>
    
    <style name="lbl_details">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:textColor">#4ECDC4</item>
        <item name="android:textSize">18sp</item>
        <item name="android:text">DETAILS</item>
    </style>
  
    <style name="frame_rectBanner"  parent="@style/WMP_HWC">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>
    
    <style name="iv_rectBanner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">150dp</item>
        <item name="android:padding">6dp</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="iv_rectBanner_mask"  parent="@style/BothMP">
        <item name="android:background">@drawable/roundcorner_frame</item>
    </style>
    
    <style name="icon_winnerNums" parent="BothWC">
        <item name="android:textColor">#777777</item>
        <item name="android:textSize">20sp</item>
        <item name="android:text">@string/fa_info_circle</item>
    </style>
    
    <style name="tv_winnerNums" parent="BothWC">
        <item name="android:textColor">#777777</item>
        <item name="android:textSize">20sp</item>
    </style>
    
    <style name="tv_description">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:maxLines">3</item>
        <item name="android:ellipsize">end</item>
    </style>
       
    <style name="tv_rulesHeader" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:text">CONTEST RULES</item>
    </style>
         
    <style name="tv_rulesHeaderDetails" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#4ECDC4</item>
        <item name="android:text">DETAILS</item>
    </style>
         
    <style name="tv_rulesBody" >
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:ellipsize">end</item>
    </style>
    
    <style name="frame_img_item">
        <item name="android:layout_width">305dp</item>
        <item name="android:layout_height">305dp</item>
    </style>
    
    <style name="img_item" parent="@style/BothMP">
        <item name="android:scaleType">fitXY</item>
    </style>
    
    <style name="img_item_mask"  parent="@style/BothMP">
        <item name="android:background">@drawable/gradientshadow</item>
        <item name="android:scaleType">fitXY</item>
    </style>
    
    <style name="tv_cashValue" parent="@style/BothWC">
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:textColor">#fffeee</item>
        <item name="android:textSize">24sp</item>
    </style>
    
    <style name="tv_winnerReward" parent="@style/tv_cashValue">
        <item name="android:layout_alignParentLeft">false</item>
        <item name="android:layout_marginLeft">6dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>
    
    <style name="tv_contestName" parent="@style/BothWC">
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:textColor">#fffeee</item>
        <item name="android:textSize">20sp</item>
        <item name="android:width">300dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>
    
    <style name="tv_contestCoin" parent="@style/BothWC">
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:textColor">#fff000</item>
    </style>
    
    <style name="icon_contest_coin" parent="@style/tv_contestCoin">
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:text">@string/fa_coin</item>
    </style>
    
    <style name="tv_beginDate" parent="@style/tv_contestCoin">
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:text">@string/fa_coin</item>
        <item name="android:textColor">#FA023C</item>
    </style>
    
    <style name="icon_clock" parent="@style/tv_beginDate">
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:text">@string/fa_clock</item>
    </style>
    
    <style name="tv_colabrationNumber" parent="@style/tv_beginDate">
        <item name="android:textColor">#fffeee</item>
        <item name="android:text"></item>
    </style>
    
    <style name="icon_colabration" parent="@style/tv_colabrationNumber">
        <item name="android:paddingBottom">2dp</item>
        <item name="android:text">@string/fa_users</item>
    </style>
    
    <style name="icon_location" parent="@style/tv_colabrationNumber">
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:text">@string/fa_map_mark</item>
    </style>
    
    <style name="icon_camera" parent="@style/BothWC">
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:text">@string/fa_camera</item>
        <item name="android:textColor">#4ECDC4</item>
        <item name="android:textSize">30sp</item>
    </style>
    
</resources>
